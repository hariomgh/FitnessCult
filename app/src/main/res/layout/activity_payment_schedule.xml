<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentSchedule">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/trainer"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:gravity="center">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:text="PAYMENT  FOR PREMIUM PERSONALISED SCHEDULES"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginBottom="100dp"/>

            <AnalogClock
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"/>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#50A5C8D8"
                android:layout_margin="20dp"
                app:cardCornerRadius="30dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:padding="8dp"
                        android:background="@color/grey"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="TO ENJOY PREMIUM FEATURES LIKE SCHEDULES TRAINERS AND AI BASED QUESTIONS BECOME OUR PREMIUM MEMBER BY PAYING ONLY 50 RUPEE"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="75dp"
                        android:layout_gravity="center"
                        android:text="â‚¹ 50 "/>


                    <Button
                        android:id="@+id/btn_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="100dp"
                        android:text="PAY ">

                    </Button>

                </LinearLayout>



            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="#50989595"
                >

                <TextView
                    android:id="@+id/payment_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:text="Payment Status">


                </TextView>

            </androidx.cardview.widget.CardView>





        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>